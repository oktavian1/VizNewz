<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.news.DetailNewsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.news.DetailNewsActivity">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_marginStart="16dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow_back"/>

        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/image"/>

        <TextView
            android:id="@+id/tv_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="19sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Naruto punya cucu namanya sasuke"
            android:layout_below="@id/img_detail"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_detail"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:text="Kementerian Kesehatan Afrika Selatan mendeteksi empat kasus pertama varian Corona (COVID-19) asal India pada Sabtu (8/5). Hasil tes juga menemukan 11 kasus varian B117 yang pertama kali terdeteksi di Inggris."
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:id="@+id/ln_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/tv_description">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:text="Tags:"/>

            <TextView
                android:id="@+id/tv_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_weight="0.2"
                android:text="corona, COVID-19, kasus baru"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_entire_news"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Read entire news"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/custom_button"
            android:layout_below="@id/ln_tags"/>
    </RelativeLayout>

</ScrollView>